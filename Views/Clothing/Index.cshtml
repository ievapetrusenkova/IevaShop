@model List<ClothingModel>
@if(Model.Count == 0){
    <p>There are no items</p>
}else
{
    <table class="table table-striped">
    <tr class="firstRow">
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>More Info</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td><button type="button" class="btn btn-light"><a asp-area="" asp-controller="Clothing" asp-action="View" asp-route-id="@product.Id">Details</a></button></td>
        </tr>
    }
</table>
}
<button type="button" class="btn btn-light"><a asp-controller="Clothing" asp-action="Create">Add</a></button>
<button type="button" class="btn btn-light"><a asp-controller="Category" asp-action="Index">Back</a></button>